<icommon:iPharmMESChildWindow x:Class="보령.설비액션기록" 
           xmlns:ShopFloorUI="clr-namespace:ShopFloorUI;assembly=ShopFloorUI.Common"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
           xmlns:icommon="clr-namespace:LGCNS.iPharmMES.Common;assembly=LGCNS.iPharmMES.Common"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:local="clr-namespace:보령"
           mc:Ignorable="d"
           Width="1000" Height="500" x:Name="Main"
           Title="설비액션기록">
    <toolkit:BusyIndicator x:Name="BusyIn" IsBusy="{Binding IsBusy}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommandAsync}"  CommandParameter="{Binding ElementName=Main}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid x:Name="LayoutRoot" Margin="0,0,0,0" Loaded="LayoutRoot_Loaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="140"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="2" x:Name="EqptSection">
                <c1:C1DataGrid x:Name="EqptDataGrid" HeadersVisibility="Column" SelectionMode="SingleRow" 
                               AutoGenerateColumns="False" CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="True" CanUserResizeRows="False" 
                               ScrollMode="RealTime" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding EqptList}">

                    <c1:C1DataGrid.Columns>
                        <c1:DataGridTextColumn Header="설비코드" Binding="{Binding Path=Eqptid}" HorizontalAlignment="Center" Width="1*"/>
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>

            </Grid>
            <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="4" Grid.ColumnSpan="2" x:Name="ActionSection">
                <c1:C1DataGrid x:Name="ActionDataGrid" HeadersVisibility="Column" SelectionMode="SingleRow"
                               AutoGenerateColumns="False" CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="True" CanUserResizeRows="False" 
                               ScrollMode="RealTime" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding ActionList}" >

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding ActionSelectCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <c1:C1DataGrid.Columns>
                        <c1:DataGridTextColumn Header="액션 리스트" Binding="{Binding Path=EqacName}" HorizontalAlignment="Center" Width="1*"/>
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>
            </Grid>
            <sdk:GridSplitter Grid.Row="1" Grid.RowSpan="3" Grid.Column="5" ShowsPreview="True"/>
            <Grid Grid.Row="1" Grid.Column="7" x:Name="EqptState">
                <c1:C1DataGrid x:Name="EqptStateDataGrid" HeadersVisibility="Column" SelectionMode="SingleRow"
                               AutoGenerateColumns="False" CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="True" CanUserResizeRows="False" 
                               ScrollMode="RealTime" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding EqptList}">

                    <c1:C1DataGrid.Columns>

                        <c1:DataGridTextColumn Header="상태" Binding="{Binding Path=EqacState}" 
                                               CellContentStyle="{Binding cellColoer}"
                                               IsReadOnly="{Binding Path=IsReadOnly}" HorizontalAlignment="Center" Width="40" />
                        <c1:DataGridTextColumn Header="설비코드" Binding="{Binding Path=Eqptid}" HorizontalAlignment="Center" Width="1*"/>
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="7" x:Name="ParamSection">
                <c1:C1DataGrid x:Name="ParamDataGrid" HeadersVisibility="Column" SelectionMode="SingleRow"
                               AutoGenerateColumns="False" CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="True" CanUserResizeRows="False" 
                               ScrollMode="RealTime" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding BR_PHR_SEL_EquipmentActionStatusWithParameter.PARAM_OUTDATAs}">
                    <c1:C1DataGrid.Columns>
                        <c1:DataGridTextColumn Header="항목" Binding="{Binding Path=EQPANAME}" HorizontalAlignment="Center" Width="150"/>
                        <c1:DataGridTextColumn Header="설명" Binding="{Binding Path=EQPADESC}" HorizontalAlignment="Center" Width="1*"/>
                        <c1:DataGridTextColumn Header="기록값" Binding="{Binding Path=ACTVAL}" HorizontalAlignment="Center" Width="100"/>
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>
            </Grid>

            <Grid x:Name="Footer" Grid.Row="4" Grid.ColumnSpan="9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding Path=W[CUICurrentPrintName], FallbackValue=프린트명}" Margin="2,0"/>
                    <TextBlock Text="{Binding curPrintName, FallbackValue=N/A}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Margin="5,0" x:Name="btnChangePrint" Width="100" Height="30" HorizontalAlignment="Left" Content="{Binding W[CUIChangePrintButtonText], FallbackValue=프린터변경}" Command="{Binding ChangePrintCommand}"/>
                    <Button Margin="5,0" x:Name="btnComfirm" Width="100" Height="30" Content="{Binding W[CUIDataWriteToEBRButtonText], FallbackValue=저장}" Command="{Binding ComfirmCommandAsync}"/>
                    <Button Margin="5,0" x:Name="btnClose" Width="100" Height="30" Content="{Binding W[CUICloseButtonText], FallbackValue=닫기}" Click="btnClose_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </toolkit:BusyIndicator>
</icommon:iPharmMESChildWindow>
