<UserControl    x:Class="Board.InterfaceInfo"
                xmlns:local="clr-namespace:Board" 
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:icommon="clr-namespace:LGCNS.iPharmMES.Common;assembly=LGCNS.iPharmMES.Common"  
                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
                xmlns:ControlsLib="clr-namespace:LGCNS.EZMES.ControlsLib;assembly=LGCNS.EZMES.ControlsLib"
                xmlns:Ctrl="clr-namespace:LGCNS.iPharmMES.Controls;assembly=LGCNS.iPharmMES.Controls"
                xmlns:c1="clr-namespace:C1.Silverlight.DataGrid;assembly=C1.Silverlight.DataGrid.5"
                mc:Ignorable="d"
                d:DesignHeight="768" d:DesignWidth="1024" 
                Name="Main">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="lblStyle" TargetType="sdk:Label">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <Style x:Key="txtStyle" TargetType="TextBox">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Width" Value="200"/>
            </Style>
            <Style x:Key="colHeader" TargetType="c1:DataGridColumnHeaderPresenter">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <Style x:Key="radioStyle" TargetType="RadioButton">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="2 0 2 0"/>
            </Style>
            <local:InterfaceInfoViewModel x:Key="ViewModel"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{StaticResource ViewModel}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommand}"
                                       CommandParameter="{Binding ElementName=Main}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ControlsLib:MainPanel_Top x:Name="mainPanel" Grid.Row="1" Grid.RowSpan="1" IsExpanded="True" IsEnableSearch="False" IsEnableSave="False" HorizontalAlignment="Stretch">
            <ControlsLib:MainPanel_Top.Search>
                <Grid x:Name="searchPanel" VerticalAlignment="Center"  Margin="0 5 0 0" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <sdk:Label Grid.Column="0" Content="I/F시스템정보" Style="{StaticResource lblStyle}"/>
                    <ComboBox Grid.Column="1" Width="150" x:Name="SystemInfo" SelectedValue="{Binding SelectedMode,Mode=TwoWay}" SelectedValuePath="Tag">
                        <ComboBoxItem Content="SAP 오더 정보" Tag="SAP_Order"/>
                        <ComboBoxItem Content="SAP 라우터 정보" Tag="SAP_Route"/>
                        <ComboBoxItem Content="TnT 실적 정보" Tag="TnT"/>
                        <ComboBoxItem Content="WMS 용기 입고 정보" Tag="WMS"/>
                        <ComboBoxItem Content="LIMS 시험 의뢰 결과" Tag="LIMS"/>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ComboFieldDataChangedCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                    <Grid Grid.Column="3" Grid.ColumnSpan="15" VerticalAlignment="Center"  Margin="0 5 0 0" Grid.Row="0" Visibility="{Binding sapOrder}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <sdk:Label Grid.Column="0" Content="계획시작일자" Style="{StaticResource lblStyle}"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Width="210">
                            <Ctrl:iPharmMESFromToCalendar SelectedDateFrom="{Binding Path=PeriodSTDTTM, Mode=TwoWay}"
                                                       SelectedDateTo="{Binding Path=PeriodEDDTTM, Mode=TwoWay}"/>
                        </StackPanel>
                        <sdk:Label Grid.Column="4" Content="오더번호"/>
                        <TextBox Grid.Column="6" Text="{Binding POID, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="8" Content="배치번호"/>
                        <TextBox Grid.Column="10" Text="{Binding BATCHNO, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="12" Content="제품코드"/>
                        <TextBox Grid.Column="14" Text="{Binding MTRLID, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="16" Content="제품명"/>
                        <TextBox Grid.Column="18" Text="{Binding MTRLNAME, Mode=TwoWay}"/>
                    </Grid>

                    <Grid Grid.Column="3" Grid.ColumnSpan="15" VerticalAlignment="Center"  Margin="0 5 0 0" Grid.Row="0" Visibility="{Binding sapRoute}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <sdk:Label Grid.Column="0" Content="계획시작일자" Style="{StaticResource lblStyle}"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Width="210">
                            <Ctrl:iPharmMESFromToCalendar SelectedDateFrom="{Binding Path=PeriodSTDTTM, Mode=TwoWay}"
                                                       SelectedDateTo="{Binding Path=PeriodEDDTTM, Mode=TwoWay}"/>
                        </StackPanel>
                        <sdk:Label Grid.Column="4" Content="제품코드"/>
                        <TextBox Grid.Column="6" Text="{Binding MTRLID, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="8" Content="제품명"/>
                        <TextBox Grid.Column="10" Text="{Binding MTRLNAME, Mode=TwoWay}"/>
                    </Grid>

                    <Grid Grid.Column="3" Grid.ColumnSpan="15" VerticalAlignment="Center"  Margin="0 5 0 0" Grid.Row="0" Visibility="{Binding tnt}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <sdk:Label Grid.Column="0" Content="날짜" Style="{StaticResource lblStyle}"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Width="210">
                            <Ctrl:iPharmMESFromToCalendar SelectedDateFrom="{Binding Path=PeriodSTDTTM, Mode=TwoWay}"
                                                       SelectedDateTo="{Binding Path=PeriodEDDTTM, Mode=TwoWay}"/>
                        </StackPanel>
                        <sdk:Label Grid.Column="4" Content="오더번호"/>
                        <TextBox Grid.Column="6" Text="{Binding POID, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="8" Content="배치번호"/>
                        <TextBox Grid.Column="10" Text="{Binding BATCHNO, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="12" Content="팔레트번호"/>
                        <TextBox Grid.Column="14" Text="{Binding PALLETID, Mode=TwoWay}"/>
                    </Grid>

                    <Grid Grid.Column="3" Grid.ColumnSpan="15" VerticalAlignment="Center"  Margin="0 5 0 0" Grid.Row="0" Visibility="{Binding wms}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <sdk:Label Grid.Column="0" Content="용기번호"/>
                        <TextBox Grid.Column="2" Text="{Binding LD_CTN_NO, Mode=TwoWay}"/>
                    </Grid>

                    <Grid Grid.Column="3" Grid.ColumnSpan="18" VerticalAlignment="Center"  Margin="0 5 0 0" Grid.Row="0" Visibility="{Binding lims}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <sdk:Label Grid.Column="0" Content="날짜" Style="{StaticResource lblStyle}"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Width="210">
                            <Ctrl:iPharmMESFromToCalendar SelectedDateFrom="{Binding Path=PeriodSTDTTM, Mode=TwoWay}"
                                                       SelectedDateTo="{Binding Path=PeriodEDDTTM, Mode=TwoWay}"/>
                        </StackPanel>
                        <sdk:Label Grid.Column="4" Content="공정" Style="{StaticResource lblStyle}"/>
                        <ComboBox Grid.Column="6" x:Name="cmbProcessSegment" Width="140"
                              ItemsSource="{Binding Path=BR_PHR_SEL_ProcessSegment.OUTDATAs}" 
                              DisplayMemberPath="PCSGNAME" SelectedValuePath="PCSGNAME"
                              SelectedValue="{Binding OPSGNAME, Mode=TwoWay}" />
                        <sdk:Label Grid.Column="8" Content="제품코드"/>
                        <TextBox Grid.Column="10" Text="{Binding MTRLID, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="12" Content="제품명"/>
                        <TextBox Grid.Column="14" Text="{Binding MTRLNAME, Mode=TwoWay}"/>
                        <sdk:Label Grid.Column="16" Content="배치번호"/>
                        <TextBox Grid.Column="18" Text="{Binding BATCHNO, Mode=TwoWay}"/>
                    </Grid>

                    <Button Grid.Column="21" Content="의뢰취소" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,0,0,0" Width="80" Height="24" Visibility="Collapsed" >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding Path=BtnApprovalCancelCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>

                    <Button Grid.Column="46" Content="검색" Width="80" HorizontalAlignment="Right" VerticalAlignment="Stretch" >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding Path=BtnSearchCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </ControlsLib:MainPanel_Top.Search>
            <ControlsLib:MainPanel_Top.Contents>
                <Grid>
                    <!--오더 정보 조회-->
                    <Grid Visibility="{Binding sapOrder}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="오더 정보" FontWeight="Bold" FontSize="14"/>
                        <c1:C1DataGrid Grid.Row="3" Grid.Column="1" x:Name="dgSapOrder"
                                       AutoGenerateColumns="False"
                                       HeadersVisibility="Column"
                                       SelectionMode="SingleRow"
                                       CanUserAddRows="False"
                                       CanUserSort="True"
                                       ItemsSource="{Binding Path=BR_BRS_SEL_INTERFACE_INFO.OUTDATA_SAP_ORDERs, Mode=OneWay}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}"
                                                           CommandParameter="{Binding ElementName=dgSapOrder, Path=SelectedItem}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn SortMemberPath="IF_NO" Header="IF_NO" Binding="{Binding IF_NO}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="SEQ" Header="SEQ" Binding="{Binding SEQ}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="AUFNR" Header="오더번호" Binding="{Binding AUFNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="CHARG" Header="배치번호" Binding="{Binding CHARG}" IsReadOnly="True"  HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="ZCHARG" Header="수탁사 제조번호" Binding="{Binding ZCHARG}" IsReadOnly="True"  HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="MATNR" Header="제품코드" Binding="{Binding MATNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="KTEXT" Header="제품명" Binding="{Binding KTEXT}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="PSMNG" Header="오더수량" Binding="{Binding PSMNG}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="MEINS" Header="기본단위" Binding="{Binding MEINS}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="PLNNR" Header="PLNNR" Binding="{Binding PLNNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="PLNAL" Header="PLNAL" Binding="{Binding PLNAL}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="VFDAT" Header="VFDAT" Binding="{Binding VFDAT}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="HSDAT" Header="HSDAT" Binding="{Binding HSDAT}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="ZVALI" Header="ZVALI" Binding="{Binding ZVALI}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="DDTEXT" Header="DDTEXT" Binding="{Binding DDTEXT}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="MTATVAL1" Header="유효기한" Binding="{Binding MTATVAL1}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="오더 상세 정보" FontWeight="Bold" FontSize="14"/>
                        <c1:C1DataGrid Grid.Row="7" Grid.Column="1" x:Name="dgSapOrderDetail"
                                       AutoGenerateColumns="False"
                                       HeadersVisibility="Column"
                                       CanUserAddRows="False"
                                       CanUserSort="True"
                                       ItemsSource="{Binding Path=BR_BRS_SEL_INTERFACE_DETAIL_INFO.OUTDATA_SAP_ORDERs, Mode=OneWay}">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn SortMemberPath="IF_NO" Header="IF_NO" Binding="{Binding IF_NO}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="SEQ" Header="SEQ" Binding="{Binding SEQ}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="OPSGNAME" Header="오더번호" Binding="{Binding AUFNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="VORNR" Header="공정순서" Binding="{Binding VORNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="LTXA1" Header="공정" Binding="{Binding LTXA1}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="ARBPL" Header="작업장" Binding="{Binding ARBPL}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="ERDAT" Header="생성일" Binding="{Binding ERDAT}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="ERZET" Header="생성시간" Binding="{Binding ERZET}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="STATUS" Header="상태" Binding="{Binding STATUS}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="IF_RSLT_CODE" Header="결과" Binding="{Binding IF_RSLT_CODE}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="INSDTTM" Header="날짜" Binding="{Binding INSDTTM}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                        <TextBlock Grid.Row="9" Grid.Column="1" Text="오더 BOM 정보" FontWeight="Bold" FontSize="14"/>
                        <c1:C1DataGrid Grid.Row="11" Grid.Column="1" x:Name="dgSapOrdrBom"
                                       AutoGenerateColumns="False"
                                       HeadersVisibility="Column"
                                       CanUserAddRows="False"
                                       CanUserSort="True"
                                       ItemsSource="{Binding Path=BR_BRS_SEL_INTERFACE_DETAIL_INFO.OUTDATA_SAP_ORDER_BOMs, Mode=OneWay}">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn SortMemberPath="IF_NO" Header="IF_NO" Binding="{Binding IF_NO}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="SEQ" Header="SEQ" Binding="{Binding SEQ}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="AUFNR" Header="오더번호" Binding="{Binding AUFNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="RSNUM" Header="예약번호" Binding="{Binding RSNUM}" IsReadOnly="True"  HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="RSPOS" Header="예약품목번호" Binding="{Binding RSPOS}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="POSNR" Header="품목번호" Binding="{Binding POSNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="MATNR" Header="BOM노드" Binding="{Binding MATNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="STLKN" Header="BOM카운터" Binding="{Binding STLKN}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="MEINS" Header="기본단위" Binding="{Binding MEINS}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="MENGE_S" Header="투입량" Binding="{Binding MENGE_S}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="VORNR" Header="공정순서" Binding="{Binding VORNR}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="IF_RSLT_CODE" Header="결과" Binding="{Binding IF_RSLT_CODE}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="INSDTTM" Header="날짜" Binding="{Binding INSDTTM}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                    <!--라우터 정보 조회-->
                    <Grid Visibility="{Binding sapRoute}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="라우트 정보" FontWeight="Bold" FontSize="14"/>
                        <c1:C1DataGrid Grid.Row="3" Grid.Column="1" x:Name="dgSapRoute"
                                       AutoGenerateColumns="False"
                                       HeadersVisibility="Column"
                                       SelectionMode="SingleRow"
                                       CanUserAddRows="False"
                                       CanUserSort="True"
                                       ItemsSource="{Binding Path=BR_BRS_SEL_INTERFACE_INFO.OUTDATA_SAP_Routes, Mode=OneWay}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}"
                                                           CommandParameter="{Binding ElementName=dgSapRoute, Path=SelectedItem}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn SortMemberPath="IF_NO" Header="IF_NO" Binding="{Binding IF_NO}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
                                <c1:DataGridTextColumn SortMemberPath="SEQ" Header="SEQ" Binding="{Binding SEQ}" IsReadOnly="True" HeaderStyle="{StaticResource colHeader}"/>
