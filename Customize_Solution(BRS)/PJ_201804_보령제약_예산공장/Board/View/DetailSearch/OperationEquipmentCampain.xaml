<UserControl    x:Class="Board.OperationEquipmentCampain"
                xmlns:local="clr-namespace:Board" 
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:icommon="clr-namespace:LGCNS.iPharmMES.Common;assembly=LGCNS.iPharmMES.Common"  
                xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
                xmlns:iPharmLib="clr-namespace:LGCNS.iPharmMES.Common.UserCtl;assembly=LGCNS.iPharmMES.Common"
                xmlns:ControlsLib="clr-namespace:LGCNS.EZMES.ControlsLib;assembly=LGCNS.EZMES.ControlsLib"
                xmlns:Ctrl="clr-namespace:LGCNS.iPharmMES.Controls;assembly=LGCNS.iPharmMES.Controls"
                xmlns:toolkitInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
                xmlns:c1="clr-namespace:C1.Silverlight.DataGrid;assembly=C1.Silverlight.DataGrid.5"
                xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                mc:Ignorable="d"
                d:DesignHeight="768" d:DesignWidth="1024" 
                Name="Main">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="lblStyle" TargetType="sdk:Label">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <Style x:Key="txtStyle" TargetType="TextBox">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Width" Value="200"/>
            </Style>
            <Style x:Key="colHeader" TargetType="c1:DataGridColumnHeaderPresenter">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <Style x:Key="radioStyle" TargetType="RadioButton">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="Malgun Gothic"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="2 0 2 0"/>
            </Style>
            <local:OperationEquipmentCampainViewModel x:Key="ViewModel"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGCNS.iPharmMES.Common;component/GlobalResource/ResourceDictionary.xaml"/>
                <ResourceDictionary x:Name="FilterBtnStyle" Source="/LGCNS.iPharmMES.Controls;component/Themes/iPharmMESFilterBtnStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{StaticResource ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommand}"
                                       CommandParameter="{Binding ElementName=Main}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ControlsLib:MainPanel_Top x:Name="mainPanel" Grid.Row="1" Grid.RowSpan="1" IsExpanded="True" IsEnableSearch="False" IsEnableSave="False" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
            <ControlsLib:MainPanel_Top.Search>
                <Grid x:Name="searchPanel" VerticalAlignment="Center" Height="15"  Margin="0 5 0 0" Grid.Row="0">
                </Grid>
            </ControlsLib:MainPanel_Top.Search>
            <ControlsLib:MainPanel_Top.Contents>
                <ControlsLib:MainPanel x:Name="mainPanel1" Grid.Row="1" Grid.RowSpan="2" MessageVisibility="Collapsed">
                    <ControlsLib:MainPanel.Search>
                        <Grid x:Name="grdSearch" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinWidth="400" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="550" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row ="0" Grid.Column="0" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <sdk:Label Grid.Column="0" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Width="Auto" Content="자재" Margin="0,0,0,0"/>
                                <iPharmLib:iPharmCodeName Grid.Column="1" Width="200" Height="25"
                                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,1,5,1" Name="cnMaterial2" 
                                              HorizontalContentAlignment="Center"
                                              CodeNameType="Material"
                                              CodeValue="{Binding Path=SelectedMaterialCode, Mode=TwoWay}" 
                                              NameValue="{Binding Path=SelectedMaterialName, Mode=TwoWay}" />
                                <sdk:Label Grid.Column="2" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" Width="Auto" Content="라우트명" Margin="5,0,0,0"/>
                                <TextBox  Grid.Column="3" Height="25" Text="{Binding ODNAME, Mode=TwoWay}" Style="{StaticResource txtStyle}" Margin="5,0,0,0"/>
                                <Button  Style="{Binding Source={StaticResource FilterBtnStyle}}" Grid.Column="4" Height="25" Width="25" HorizontalAlignment="Stretch" 
                                         VerticalAlignment="Stretch" Margin="15 0 0 0">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding Path=BtnSearchCommand}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </Grid>
                            <Grid Grid.Row ="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="250"/>
                                    <ColumnDefinition Width="Auto" MinWidth="300"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row ="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                                    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                                        <sdk:TreeView x:Name="GroupTreeView">
                                            <sdk:TreeView.Resources>
                                                <DataTemplate x:Key="GroupNameTemplate">
                                                    <StackPanel Orientation="Horizontal" Background="Transparent">
                                                        <TextBlock Text="{Binding GroupName}" Visibility="{Binding ReadOnlyVisibility}"/>
                                                        <TextBox Text="{Binding GroupName, Mode=TwoWay}" MinWidth="100" Visibility="{Binding EditVisibility}" KeyDown="Enter_KeyDown"/>
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                                <i:InvokeCommandAction Command="{Binding Path=DataContext.GroupDetailSearchCommand, ElementName=GroupTreeView}" CommandParameter="{Binding GroupName}"/>
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                        <toolkitInput:ContextMenuService.ContextMenu>
                                                            <toolkitInput:ContextMenu>
                                                                <toolkitInput:MenuItem Header="그룹 이름 변경" 
                                                            Command="{Binding Path=DataContext.ChangeGroupNameCommand, ElementName=GroupTreeView}" CommandParameter="{Binding}"/>
                                                                <toolkitInput:MenuItem Header="그룹 삭제" 
                                                            Command="{Binding Path=DataContext.DeleteGroupCommand, ElementName=GroupTreeView}" CommandParameter="{Binding GroupName}"/>
                                                            </toolkitInput:ContextMenu>
                                                        </toolkitInput:ContextMenuService.ContextMenu>
                                                    </StackPanel>
                                                </DataTemplate>
                                                <DataTemplate x:Key="RouteGroupHeaderTemplate">
                                                    <TextBlock Text="Route Group" FontWeight="Bold">
                                                    <toolkitInput:ContextMenuService.ContextMenu>
                                                        <toolkitInput:ContextMenu>
                                                            <toolkitInput:MenuItem Header="라우트 그룹 추가" 
                                                            Command="{Binding Path=DataContext.CreateGroupCommand, ElementName=GroupTreeView}"/>
                                                        </toolkitInput:ContextMenu>
                                                    </toolkitInput:ContextMenuService.ContextMenu>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </sdk:TreeView.Resources>
                                            <sdk:TreeViewItem HeaderTemplate="{StaticResource RouteGroupHeaderTemplate}" ItemsSource="{Binding Groupeds}" ItemTemplate="{StaticResource GroupNameTemplate}">
                                            </sdk:TreeViewItem>
                                        </sdk:TreeView>
                                    </ScrollViewer>
                                </Grid>

                                <Grid Grid.Row ="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto">
                                    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
                                        <sdk:TreeView x:Name="RouteTreeView" ItemsSource="{Binding GroupedRoutes}">
                                            <sdk:TreeView.Resources>
                                                <DataTemplate x:Key="RouteNameTemplate">
                                                    <StackPanel Orientation="Horizontal" Background="Transparent">
                                                        <!--<TextBlock Text="{Binding OdName}">-->
                                                        <TextBlock FontFamily="Portable User Interface">
                                                            <Run Text="{Binding OdId, StringFormat='[{0}]' }"/>
                                                            <Run Text="{Binding OdName}"/>
                                                            <toolkitInput:ContextMenuService.ContextMenu>
                                                                <toolkitInput:ContextMenu FontFamily="Portable User Interface">
                                                                    <toolkitInput:MenuItem Header="라우트 삭제" 
                                                                        Command="{Binding Path=DataContext.DeleteRouteCommand, ElementName=GroupTreeView}" CommandParameter="{Binding }"/>
                                                                </toolkitInput:ContextMenu>
                                                            </toolkitInput:ContextMenuService.ContextMenu>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                                <sdk:HierarchicalDataTemplate x:Key="RouteHeaderHierarchyTemplate"
                                                                          ItemsSource="{Binding Children}"
                                                                          ItemTemplate="{StaticResource RouteNameTemplate}">
                                                    <TextBlock Text="{Binding GroupName}" FontFamily="Portable User Interface">
                                                    <toolkitInput:ContextMenuService.ContextMenu>
                                                        <toolkitInput:ContextMenu>
                                                            <toolkitInput:MenuItem Header="라우트 추가" Command="{Binding Path=DataContext.RouteManagementCommand, ElementName=RouteTreeView}" CommandParameter="{Binding GroupName}">
                                                            </toolkitInput:MenuItem>
                                                        </toolkitInput:ContextMenu>
                                                    </toolkitInput:ContextMenuService.ContextMenu>
                                                   <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                                            <i:InvokeCommandAction 
                                                            Command="{Binding Path=DataContext.EquipmentSearchCommand, ElementName=RouteTreeView}" 
                                                            CommandParameter="{Binding OdName}"/>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                    </TextBlock>
                                                </sdk:HierarchicalDataTemplate>
                                            </sdk:TreeView.Resources>
                                            <sdk:TreeView.ItemTemplate>
                                                <StaticResource ResourceKey="RouteHeaderHierarchyTemplate"/>
                                            </sdk:TreeView.ItemTemplate>
                                        </sdk:TreeView>
                                    </ScrollViewer>
                                </Grid>
                            </Grid>

                        </Grid>
                    </ControlsLib:MainPanel.Search>
                    <ControlsLib:MainPanel.Contents>
                        <Grid x:Name="CampainOperationGrid" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinWidth="400" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="800" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <ControlsLib:CNSDataGrid x:Name="CampainOperationEquipmentGrid" IsRowNumber="False"  Width="Auto" HeaderRowCount="2"                                              
                            IsRowAdd="True" IsRowDelete="True" IsEditMode="True" IsEditSection="True" Grid.Row="0"
                            ItemsSource="{Binding Path=BR_BRS_SEL_SIMPLE_CLEAN_EQPT.OUTDATAs, Mode=OneWay}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="CommittedRowEdit">
                                        <i:InvokeCommandAction Command="{Binding RowEditCommand}"/>
                                    </i:EventTrigger>
                                    <i:EventTrigger EventName="RowAdd_Click">
                                        <i:InvokeCommandAction Command="{Binding RowAddCommand}"/>
                                    </i:EventTrigger>
                                    <!--<i:EventTrigger EventName="CheckFieldDataChanged">
                                        <i:InvokeCommandAction Command="{Binding CheckFieldDataChangedCommand}"/>
                                    </i:EventTrigger>-->
                                </i:Interaction.Triggers>
                                <ControlsLib:CNSDataGrid.DataColumns>
                                    <ControlsLib:DataColumn DataField="CHK" HeadName="" HeaderWidth="30" ColumnType="CheckBox" HorizontalAlignment="Center" Excel="False" ColumnVisibility="Visible" ReadOnly="True"
                                                        ItemsSource="{Binding CHK, Mode=TwoWay}"/>
                                    <ControlsLib:DataColumn HeadName="설비코드" DataField="EQPTID" ColumnType="TextBox" ColumnVisibility="Visible" HorizontalAlignment="Center"
                                                        ItemsSource="{Binding EQPTID, Mode=TwoWay}" HeaderWidth="100" ReadOnly="True"/>
                                    <ControlsLib:DataColumn HeadName="설비명" DataField="EQPTNAME" ColumnType="TextBox" ColumnVisibility="Visible" HorizontalAlignment="Center"
                                                        ItemsSource="{Binding EQPTNAME, Mode=TwoWay}" HeaderWidth="250" ReadOnly="True"/>
                                    <ControlsLib:DataColumn HeadName="버전" DataField="VERSION" ColumnType="TextBox" ColumnVisibility="Visible" HorizontalAlignment="Center"
                                                        ItemsSource="{Binding VERSION, Mode=TwoWay}" HeaderWidth="70" ReadOnly="True"/>
                                    <ControlsLib:DataColumn HeadName="캠페인(횟수)" DataField="SIMPLE_CLEAN_CNT" ColumnType="Int32" ColumnVisibility="Visible" HorizontalAlignment="Center"
                                                        ItemsSource="{Binding SIMPLE_CLEAN_CNT, Mode=TwoWay}" HeaderWidth="100" ReadOnly="False"/>
                                    <ControlsLib:DataColumn HeadName="생산기간(일)" DataField="DHT_CNT" ColumnType="Int32" ColumnVisibility="Visible" HorizontalAlignment="Center"
                                                        ItemsSource="{Binding DHT_CNT, Mode=TwoWay}" HeaderWidth="100" ReadOnly="False"/>
                                    <ControlsLib:DataColumn HeadName="생성자" DataField="INSUSER" ColumnType="TextBox" ColumnVisibility="Visible" HorizontalAlignment="Center"
                                                        ItemsSource="{Binding INSUSER, Mode=TwoWay}" HeaderWidth="100" ReadOnly="True"/>
                                    <ControlsLib:DataColumn HeadName="생성시간" DataField="INSDTTM" ColumnType="TextBox" ColumnVisibility="Visible" HorizontalAlignment="Center"
                                                        ItemsSource="{Binding INSDTTM, Mode=TwoWay}" HeaderWidth="200" ReadOnly="True"/>
                                    <ControlsLib:DataColumn HeadName="사용여부" DataField="ISUSE" HeaderWidth="60"   ColumnType="CheckBox" HorizontalAlignment="Center" Excel="False" ColumnVisibility="Visible" ReadOnly="False"
                                                        ItemsSource="{Binding ISUSE, Mode=TwoWay}" />       
                                </ControlsLib:CNSDataGrid.DataColumns>

                            </ControlsLib:CNSDataGrid>
                            <Grid x:Name="CampainOperationSaveGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MinWidth="60" Grid.Row="1">
                                <Button Width="70" Height="20" HorizontalAlignment="Right" Cursor="Hand" Visibility="Visible" Margin="0,0,0,30">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Border Background="#FFE0E0E0" 
                                                    BorderBrush="#FF707070" 
                                                    BorderThickness="1"
                                                    CornerRadius="5">
                                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                                    <Image Source="../../Images/Save.png" Width="25" Height="16"/>
                                                    <TextBlock Text="Save" Margin="0,0,0,0" VerticalAlignment="Center" Foreground="Black"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <icommon:EventToCommandAction Command="{Binding EquipmentSaveCommand}" CommandParameter="{Binding GroupName}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </Grid>
                        </Grid>
                    </ControlsLib:MainPanel.Contents>
                </ControlsLib:MainPanel>
            </ControlsLib:MainPanel_Top.Contents>
        </ControlsLib:MainPanel_Top>
    </Grid>
</UserControl>
