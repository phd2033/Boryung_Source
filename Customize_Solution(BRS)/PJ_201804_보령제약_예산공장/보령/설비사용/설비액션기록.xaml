<ShopFloorUI:ShopFloorCustomWindow x:Class="보령.설비액션기록" 
           xmlns:ShopFloorUI="clr-namespace:ShopFloorUI;assembly=ShopFloorUI.Common"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
           xmlns:icommon="clr-namespace:LGCNS.iPharmMES.Common;assembly=LGCNS.iPharmMES.Common"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:local="clr-namespace:보령"
           mc:Ignorable="d"
           Width="800" Height="500" x:Name="Main"
           Title="설비액션기록">
    <ShopFloorUI:ShopFloorCustomWindow.Resources>
        <local:설비액션기록ViewModel x:Key="ViewModel"/>
        <Style TargetType="c1:DataGridColumnHeaderPresenter" x:Key="HeaderStyle">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </ShopFloorUI:ShopFloorCustomWindow.Resources>
    <toolkit:BusyIndicator x:Name="BusyIn" DataContext="{Binding Source={StaticResource ViewModel}}" IsBusy="{Binding IsBusy}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommandAsync}" CommandParameter="{Binding ElementName=Main}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid x:Name="LayoutRoot" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="60"></ColumnDefinition>
                <ColumnDefinition Width="140"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <sdk:Label Grid.Column="1" Content="설비코드 "/>
            <TextBox Grid.Column="2" VerticalAlignment="Center" Width="110" Name="txtEqptId" Text="{Binding Eqptid, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="KeyDown">
                        <icommon:EditBoxKeyDownAction Command="{Binding EqptScanCommand}" CommandParameter="{Binding Text,ElementName=txtEqptId}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Button Grid.Column="3" Grid.ColumnSpan="2" Content="조회" Margin="6">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding EqptScanCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>

            <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="EqptSection">
                <c1:C1DataGrid x:Name="EqptDataGrid" HeadersVisibility="Column" SelectionMode="SingleRow"
                               AutoGenerateColumns="False" CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="True" CanUserResizeRows="False" 
                               ScrollMode="RealTime" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding EqptList}">
                   
                    <c1:C1DataGrid.Columns>
                        <c1:DataGridTextColumn Header="설비코드" Binding="{Binding Path=Eqptid}" HeaderStyle="{StaticResource HeaderStyle}" HorizontalAlignment="Center" Width="1*"/>
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" x:Name="ActionSection">
                <c1:C1DataGrid x:Name="ActionDataGrid" HeadersVisibility="Column" SelectionMode="SingleRow"
                               AutoGenerateColumns="False" CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="True" CanUserResizeRows="False" 
                               ScrollMode="RealTime" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding ActionList}" >

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="KeyDown">
                            <icommon:EditBoxKeyDownAction Command="{Binding EqptScanCommand}" CommandParameter="{Binding Text,ElementName=txtEqptId}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    
                    <c1:C1DataGrid.Columns>
                        <c1:DataGridTextColumn Header="상태" Binding="{Binding Path=EqacState}" 
                                               CellContentStyle="{Binding cellColoer}"
                                               HeaderStyle="{StaticResource HeaderStyle}" IsReadOnly="{Binding Path=IsReadOnly}" HorizontalAlignment="Center" Width="0.3*" />
                        <c1:DataGridTextColumn Header="액션 리스트" Binding="{Binding Path=EqacName}" HeaderStyle="{StaticResource HeaderStyle}" HorizontalAlignment="Center" Width="1*"/>
                        
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="7" x:Name="ParamSection">
                <c1:C1DataGrid x:Name="ParamDataGrid" HeadersVisibility="Column" SelectionMode="SingleRow"
                               AutoGenerateColumns="False" CanUserAddRows="False" CanUserEditRows="False" CanUserRemoveRows="True" CanUserResizeRows="False" 
                               ScrollMode="RealTime" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding BR_PHR_SEL_EquipmentActionStatusWithParameter.PARAM_OUTDATAs}">
                    <c1:C1DataGrid.Columns>
                        <c1:DataGridTextColumn Header="파라미터" Binding="{Binding Path=EQPANAME}" HeaderStyle="{StaticResource HeaderStyle}" HorizontalAlignment="Center" Width="1*"/>
                    </c1:C1DataGrid.Columns>
                </c1:C1DataGrid>
            </Grid>

            <Grid x:Name="Footer" Grid.Row="2">
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,-120,14" Width="120">
                    <TextBlock Text="{Binding W[CUICurrentPrintName], FallbackValue=프린트명, Source={StaticResource ViewModel}}" Margin="2,0"/>
                    <TextBlock Text="{Binding curPrintName, FallbackValue=N/A}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="178,13,-608,7" Grid.RowSpan="2">
                    <Button Margin="5,0" x:Name="btnChangePrint" Width="100" Height="30" Content="{Binding W[CUIChangePrintButtonText], Source={StaticResource ViewModel}, FallbackValue=프린터변경}" Command="{Binding ChangePrintCommand}" RenderTransformOrigin="-0.38,0.367"/>
                    <Button Margin="5,0" Name="btnComfirm" Width="100" Height="30" Content="{Binding W[CUIDataWriteToEBRButtonText], Source={StaticResource ViewModel}, FallbackValue=기록}" Command="{Binding ComfirmCommandAsync}"/>
                    <Button Margin="5,0" Name="btnClose" Width="100" Height="30" Content="{Binding W[CUICloseButtonText], Source={StaticResource ViewModel}, FallbackValue=닫기}" Click="btnClose_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </toolkit:BusyIndicator>
</ShopFloorUI:ShopFloorCustomWindow>
